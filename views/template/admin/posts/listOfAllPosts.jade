extends ../layout

block content
  h2 Список статей
  a(href='/admin/content/posts/new')
    button.btn.btn-default.btn-sm(type='button')
      span.glyphicon.glyphicon-pencil
      | Создать
  if posts && posts.length
    table.table-bordered.table-condensed
      tr
        th #
        th Title
        th HTML
        th Active
        th Date
      each post, index in posts
        tr
          td= index
          td= post.title
          td= post.html.substr(0, 80) + '...'
          td= post.active
          td= post.date
  else
    h2 Нет статей